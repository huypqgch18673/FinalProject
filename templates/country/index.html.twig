{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-11 text-center">
    <h2 class="text text-success mb-2">List of Countries</h2>
    <a class="btn btn-primary mb-3" href="{{ path('country_add')}}">ADD</a>
    <table class="table table-bordered">
        <tr>
            <th>Country Id</th>
            <th>Country name</th>
            <th>Country image</th>
            <th>Menu</th>
        </tr>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>
                    <a href="{{ path('country_detail' , {'id' : country.id })}}">
                        <img src="{{ country.image }}" width=220 height=150>
                    </a>     
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('country_edit', {'id': country.id })}}">EDIT</a>
                    <a class="btn btn-danger" href="{{ path('country_delete', {'id' : country.id })}}"
                    onclick="return confirm('Do you want to delete this country ?');"
                    >DELETE</a>
                </td>
            </tr>
        {% endfor %}  
    </table>
</div>
{% endblock %}