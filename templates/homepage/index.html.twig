{% extends 'base.html.twig' %}

{% block body %}
	<br>
	<div class="container">
    <h1 class="mt-3 mb-4">Products</h1>
    <div class="row">
        {% for p in product %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{p.image}}" alt="{{ p.title }}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ p.title }}</h5>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('orderItem_add', {'id': p.id}) }}" class="btn btn-dark">View details</a>
                            {# <a href="{{ path('product_detail' , { 'id': p.id }) }}" class="btn btn-dark">View details</a> #}
                            <span class="h5 mt-auto">{{ p.price }} VND</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
	{% endblock %}
